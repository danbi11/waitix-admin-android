<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.danbi_000.waitix">

    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <uses-feature
        android:name="android.hardware.NFC"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/runicon_admin"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignupActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".StatsActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".ModifyActivity" />
        <activity android:name=".ManualActivity" />
        <activity android:name=".PastWaitingListActivity" />
        <activity android:name=".CloseActivity" />
        <activity android:name=".SplashActivity"></activity>
    </application>

</manifest>