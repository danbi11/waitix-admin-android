<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="20dp"
    android:gravity="start|top">

    <TextView
        android:id="@+id/txt_waitingNum"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:text="000"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_waitingNum"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="-5dp"
        android:layout_toEndOf="@+id/txt_waitingNum"
        android:layout_toRightOf="@+id/txt_waitingNum"
        android:text="10:56 AM" />

    <TextView
        android:id="@+id/txt_numOfPeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_time"
        android:layout_alignStart="@+id/txt_time"
        android:layout_below="@+id/txt_time"
        android:layout_marginTop="10dp"
        android:text="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ì¸"
        android:id="@+id/textView18"
        android:layout_alignBottom="@+id/txt_numOfPeople"
        android:layout_toRightOf="@+id/txt_numOfPeople"
        android:layout_toEndOf="@+id/txt_numOfPeople" />

    <ImageView
        android:id="@+id/img_call"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/txt_numOfPeople"
        android:layout_marginBottom="-5dp"
        android:layout_marginLeft="190dp"
        android:layout_toEndOf="@+id/txt_numOfPeople"
        android:layout_toRightOf="@+id/txt_numOfPeople"
        android:src="@drawable/bell01" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        android:background="#999999" />
</RelativeLayout>
