<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="160dp"
    android:background="#f4f2f8">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정말 당일 대기번호 발급을\n      마감하시겠습니까?"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />
    <Button
        android:id="@+id/btnNo"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:background="@drawable/store_initial_cancel"
        android:textColor="#ffffff"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/textView"/>
    <Button
        android:id="@+id/btnYes"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:background="@drawable/store_initial_end"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/btnNo"
        android:layout_toRightOf="@+id/btnNo"
        android:layout_marginLeft="15dp"/>


</RelativeLayout>
